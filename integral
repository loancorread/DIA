        // Function to organize students into groups
        function organizeIntoGroups(students) {
            // Filter out retired students
            const activeStudents = students.filter(student => !student.Observaciones.includes("RET."));
            const numStudents = activeStudents.length;
            const groupSize = Math.floor(numStudents / 3);
            const remainder = numStudents % 3;

            const groups = {
                G1: [],
                G2: [],
                G3: []
            };

            let studentIndex = 0;

            // Distribute students into groups
            for (let i = 0; i < groupSize; i++) {
                groups.G1.push(activeStudents[studentIndex++]);
                groups.G2.push(activeStudents[studentIndex++]);
                groups.G3.push(activeStudents[studentIndex++]);
            }

            // Distribute remaining students
            if (remainder === 1) {
                groups.G1.push(activeStudents[studentIndex++]);
            } else if (remainder === 2) {
                groups.G1.push(activeStudents[studentIndex++]);
                groups.G2.push(activeStudents[studentIndex++]);
            }

            return groups;
        }

        // Function to render groups for a course
        function renderCourseGroups(courseName, students) {
            const groups = organizeIntoGroups(students);
            let html = '';
            for (const groupName in groups) {
                html += `
                    <div class="mb-6">
                        <button class="accordion-header w-full text-left py-3 px-4 bg-indigo-100 hover:bg-indigo-200 rounded-lg flex justify-between items-center shadow-md">
                            <span class="font-semibold text-lg text-indigo-800">${groupName} (${groups[groupName].length} estudiantes)</span>
                            <svg class="w-5 h-5 text-indigo-600 transform transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                        </button>
                        <div class="accordion-content bg-indigo-50 rounded-b-lg shadow-inner">
                            <ul class="list-disc pl-8 pr-4 py-2">
                                ${groups[groupName].map(student => `<li class="py-1 text-gray-700">${student.Nombre} (RUT: ${student.RUN})</li>`).join('')}
                            </ul>
                        </div>
                    </div>
                `;
            }
            return html;
        }

        // JavaScript function to filter the table based on selected criteria
        function filtrarTabla() {
            // Get filter values, converting them to lowercase for case-insensitive comparison
            const tipo = document.getElementById("tipoFiltro").value.toLowerCase();
            const curso = document.getElementById("cursoFiltro").value.toLowerCase();
            const dia = document.getElementById("diaFiltro").value.toLowerCase();

            // Select all table rows within the tbody
            const filas = document.querySelectorAll("#tablaCronograma tbody tr");

            // Iterate over each row to apply filtering
            filas.forEach(fila => {
                // Get the full text content of the row and convert to lowercase
                const textoFila = fila.textContent.toLowerCase();

                // Determine if the row should be displayed based on all filters
                const mostrar =
                    (tipo === "todos" || textoFila.includes(tipo)) && // Filter by type
                    (curso === "todos" || textoFila.includes(curso)) && // Filter by course
                    (dia === "todos" || textoFila.includes(dia)); // Filter by day/week

                // Set the display style of the row
                fila.style.display = mostrar ? "" : "none";
            });
        }

        // Function to attach accordion listeners
        function attachAccordionListeners() {
            document.querySelectorAll('.accordion-header').forEach(header => {
                // Remove any existing click listeners to prevent duplicates
                header.onclick = null;
                header.onclick = function() {
                    const content = this.nextElementSibling;
                    const icon = this.querySelector('svg');

                    // Toggle 'active' class on content for height transition
                    content.classList.toggle('active');

                    // Rotate arrow icon
                    if (content.classList.contains('active')) {
                        icon.style.transform = 'rotate(180deg)';
                    } else {
                        icon.style.transform = 'rotate(0deg)';
                    }
                };
            });
        }

        // Main tab switching logic
        document.addEventListener('DOMContentLoaded', () => {
            const tabButtonsContainer = document.getElementById('main-tab-buttons');
            const tabContentContainer = document.getElementById('main-tab-content');

            // Initial setup for student distribution tabs
            const studentTabButtonsContainer = document.getElementById('student-tab-buttons');
            const studentTabContentContainer = document.getElementById('student-tab-content');
            let firstCourse = true;

            for (const courseName in coursesData) {
                // Create tab button for student distribution
                const button = document.createElement('button');
                button.className = `tab-button py-3 px-6 rounded-t-lg text-lg font-medium focus:outline-none transition-all duration-300 ${firstCourse ? 'active bg-indigo-700 text-white' : 'text-indigo-700 hover:bg-indigo-100'}`;
                button.textContent = courseName;
                button.setAttribute('data-course', courseName);
                studentTabButtonsContainer.appendChild(button);

                // Create tab content for student distribution
                const contentDiv = document.createElement('div');
                contentDiv.id = `student-content-${courseName.replace(/\s/g, '-')}`;
                contentDiv.className = `tab-pane ${firstCourse ? 'block' : 'hidden'}`;
                contentDiv.innerHTML = renderCourseGroups(courseName, coursesData[courseName]);
                studentTabContentContainer.appendChild(contentDiv);

                firstCourse = false;
            }

            // Event listener for main tabs (Cronograma and Distribución)
            tabButtonsContainer.addEventListener('click', (event) => {
                const clickedButton = event.target.closest('.main-tab-button');
                if (!clickedButton) return;

                // Remove 'active' class from all main buttons and hide all main contents
                document.querySelectorAll('.main-tab-button').forEach(btn => {
                    btn.classList.remove('active', 'bg-indigo-700', 'text-white');
                    btn.classList.add('text-indigo-700', 'hover:bg-indigo-100');
                });
                document.querySelectorAll('.main-tab-pane').forEach(pane => pane.classList.add('hidden'));

                // Add 'active' class to the clicked main button and show its content
                clickedButton.classList.add('active', 'bg-indigo-700', 'text-white');
                clickedButton.classList.remove('text-indigo-700', 'hover:bg-indigo-100');
                const targetTab = clickedButton.getAttribute('data-tab');
                document.getElementById(targetTab).classList.remove('hidden');

                // If the "Distribución de Estudiantes" tab is active, activate its first course tab and attach accordion listeners
                if (targetTab === 'student-distribution-tab') {
                    if (studentTabButtonsContainer.firstElementChild) {
                        studentTabButtonsContainer.firstElementChild.click(); // This will also call attachAccordionListeners
                    }
                }
            });

            // Event listener for student distribution sub-tabs
            studentTabButtonsContainer.addEventListener('click', (event) => {
                const clickedButton = event.target.closest('.tab-button');
                if (!clickedButton) return;

                // Remove 'active' class from all student sub-tab buttons and hide all student sub-tab contents
                document.querySelectorAll('#student-tab-buttons .tab-button').forEach(btn => {
                    btn.classList.remove('active', 'bg-indigo-700', 'text-white');
                    btn.classList.add('text-indigo-700', 'hover:bg-indigo-100');
                });
                document.querySelectorAll('#student-tab-content .tab-pane').forEach(pane => pane.classList.add('hidden'));

                // Add 'active' class to the clicked student sub-tab button and show its content
                clickedButton.classList.add('active', 'bg-indigo-700', 'text-white');
                clickedButton.classList.remove('text-indigo-700', 'hover:bg-indigo-100');
                const targetCourse = clickedButton.getAttribute('data-course');
                document.getElementById(`student-content-${targetCourse.replace(/\s/g, '-')}`).classList.remove('hidden');

                // Re-attach accordion listeners for the active student tab
                attachAccordionListeners();
            });

            // Activate the first main tab (Cronograma) on page load
            if (tabButtonsContainer.firstElementChild) {
                tabButtonsContainer.firstElementChild.click();
            }
        });
    </script>
</head>
<body class="bg-gray-50 text-gray-800 p-4 sm:p-6 md:p-8">

    <div class="max-w-6xl mx-auto bg-white shadow-lg rounded-xl p-6 sm:p-8 md:p-10">
        <h1 class="text-3xl sm:text-4xl font-bold text-center text-indigo-700 mb-2">Gestión de Cronogramas y Estudiantes</h1>
        <h2 class="text-xl sm:text-2xl text-center text-gray-600 mb-8">Organiza tus horarios y grupos de manera eficiente</h2>

        <!-- Main Tab Buttons -->
        <div id="main-tab-buttons" class="flex flex-wrap justify-center mb-6 border-b-2 border-indigo-200">
            <button class="main-tab-button py-3 px-6 rounded-t-lg text-lg font-medium focus:outline-none transition-all duration-300 active bg-indigo-700 text-white" data-tab="cronograma-tab">
                Cronograma DIA
